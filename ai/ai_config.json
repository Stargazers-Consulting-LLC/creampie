{
  "ai_documentation_config": {
    "version": "3.1",
    "last_updated": "2025-01-27",
    "description": "AI-optimized JSON documentation configuration for the CreamPie project with dynamic integration and mandatory style guide compliance",
    "documentation_format": "json",
    "optimization_target": "ai_tool_consumption",
    "style_guide_compliance": {
      "mandatory": true,
      "primary_guide": "humans/guides/python_style_guide.md",
      "ai_guide": "ai/guide_docs/language_specific/python_style_guide.json",
      "validation_required": true,
      "auto_check": true
    },
    "maintenance_scripts": [
      "scripts/ai_health_check.py",
      "scripts/update_documentation.py",
      "scripts/test_paths.py",
      "scripts/convert_to_json.py",
      "scripts/dynamic_integration.py"
    ]
  },
  "documentation_structure": {
    "format": "json",
    "optimization": "ai_tool_consumption",
    "core_documents": [
      "readme.json",
      "ai_quick_reference.json",
      "search_index.json",
      "ai_usage_guide.json"
    ],
    "guide_docs": {
      "core": [
        "core_principles.json",
        "feature_template.json",
        "code_review_patterns.json",
        "ai_tool_optimization_guide.json"
      ],
      "language_specific": [
        "language_specific/python_style_guide.json",
        "language_specific/fastapi_development_guide.json",
        "language_specific/python_testing_style_guide.json",
        "language_specific/react_style_guide.json"
      ],
      "domain_specific": [
        "domain_specific/database_management_guide.json",
        "domain_specific/shell_style_guide.json"
      ]
    },
    "project_context": [
      "architecture_overview.json",
      "common_patterns.json",
      "development_workflow.json"
    ],
    "features": {
      "plans": "features/plans/",
      "summaries": "features/summaries/"
    },
    "outputs": {
      "health_check": "outputs/health_check/",
      "updates": "outputs/updates/",
      "test_results": "outputs/test_results/",
      "conversion_reports": "outputs/",
      "dynamic_integration": "outputs/dynamic_integration/"
    }
  },
  "dynamic_integration": {
    "enabled": true,
    "style_guide_integration": {
      "mandatory": true,
      "source_guide": "humans/guides/python_style_guide.md",
      "ai_guide": "ai/guide_docs/language_specific/python_style_guide.json",
      "auto_sync": true,
      "validation_required": true
    },
    "integration_rules": {
      "core_principles_inheritance": {
        "source_guides": [
          "guide_docs/language_specific/python_style_guide.json",
          "guide_docs/language_specific/fastapi_development_guide.json",
          "guide_docs/domain_specific/database_management_guide.json",
          "guide_docs/domain_specific/shell_style_guide.json"
        ],
        "target_sections": [
          "mandatory_python_patterns",
          "python_quality_checklist",
          "python_pattern_examples"
        ],
        "integration_method": "pattern_extraction",
        "priority": "critical"
      },
      "style_guide_compliance": {
        "mandatory_patterns": [
          "module_documentation",
          "import_organization",
          "type_hints",
          "error_handling",
          "file_operations",
          "logging_setup",
          "database_patterns",
          "fastapi_patterns",
          "testing_patterns",
          "security_patterns"
        ],
        "validation_required": true,
        "auto_check": true,
        "priority": "critical"
      },
      "automatic_pattern_sync": {
        "enabled": true,
        "sync_frequency": "on_demand",
        "pattern_categories": [
          "error_handling",
          "security_patterns",
          "performance_patterns",
          "code_organization",
          "testing_patterns"
        ],
        "exclusion_patterns": [
          "deprecated_patterns",
          "experimental_patterns",
          "context_specific_patterns"
        ]
      }
    },
    "pattern_extraction": {
      "extraction_rules": {
        "python_style_guide": {
          "critical_patterns": [
            "module_documentation",
            "import_organization",
            "type_hints",
            "error_handling",
            "file_operations",
            "logging_setup",
            "database_patterns",
            "fastapi_patterns",
            "testing_patterns",
            "security_patterns",
            "pydantic_v2_migration"
          ],
          "extraction_method": "section_content",
          "validation_required": true,
          "mandatory_compliance": true
        },
        "fastapi_development_guide": {
          "critical_patterns": [
            "router_organization",
            "dependency_injection",
            "request_response_models",
            "authentication_authorization"
          ],
          "extraction_method": "section_content",
          "validation_required": true
        },
        "database_management_guide": {
          "critical_patterns": [
            "sqlalchemy_models",
            "database_operations",
            "database_configuration",
            "migration_patterns"
          ],
          "extraction_method": "section_content",
          "validation_required": true
        }
      }
    },
    "integration_workflow": {
      "trigger_conditions": [
        "guide_update",
        "new_pattern_detection",
        "manual_sync_request",
        "health_check_failure",
        "style_guide_violation"
      ],
      "validation_steps": [
        "pattern_consistency_check",
        "cross_reference_validation",
        "priority_conflict_resolution",
        "format_compatibility_check",
        "style_guide_compliance_check"
      ],
      "output_formats": [
        "core_principles_update",
        "integration_report",
        "conflict_resolution_log",
        "style_guide_compliance_report"
      ]
    }
  },
  "ai_tool_settings": {
    "json_optimization": {
      "structured_data": true,
      "direct_access": true,
      "no_parsing_required": true,
      "consistent_format": true
    },
    "search_optimization": {
      "keywords_enabled": true,
      "semantic_tags": true,
      "cross_references": true,
      "metadata_extraction": true
    },
    "code_generation": {
      "file_paths": true,
      "implementation_hints": true,
      "pattern_examples": true,
      "validation_rules": true,
      "style_guide_compliance": {
        "mandatory": true,
        "auto_check": true,
        "validation_required": true,
        "quality_checklist": true
      }
    },
    "context_awareness": {
      "dependency_mapping": true,
      "priority_systems": true,
      "decision_frameworks": true,
      "error_handling": true,
      "style_guide_awareness": {
        "mandatory": true,
        "auto_reference": true,
        "violation_detection": true
      }
    },
    "dynamic_integration": {
      "pattern_inheritance": true,
      "automatic_sync": true,
      "conflict_resolution": true,
      "validation_automation": true,
      "style_guide_sync": true
    },
    "content_exclusions": {
      "methodology_terms": [
        "sprint",
        "sprints",
        "agile",
        "scrum",
        "iteration",
        "sprint planning",
        "sprint review",
        "sprint retrospective"
      ],
      "time_based_placeholders": [
        "week 1",
        "week 2",
        "sprint 1",
        "sprint 2",
        "iteration 1"
      ],
      "rule": "Do not include sprint/agile methodology concepts unless explicitly requested by the user"
    },
    "content_guidelines": {
      "plan_documents": {
        "focus": "high_level_strategy",
        "avoid": [
          "detailed_code_snippets",
          "implementation_specifics",
          "step_by_step_instructions",
          "exact_file_contents"
        ],
        "include": [
          "overall_approach",
          "key_decisions",
          "architecture_considerations",
          "risk_assessment",
          "success_criteria"
        ],
        "rule": "Plans should focus on WHAT and WHY, not HOW. Implementation details belong in separate implementation guides."
      },
      "implementation_guides": {
        "focus": "detailed_implementation",
        "include": [
          "step_by_step_instructions",
          "code_examples",
          "file_paths",
          "testing_strategies"
        ],
        "rule": "Implementation guides can include detailed code and step-by-step instructions."
      }
    }
  },
  "priority_system": {
    "critical_priority": [
      "python_style_guide.json",
      "core_principles.json"
    ],
    "high_priority": [
      "architecture_overview.json",
      "fastapi_development_guide.json",
      "database_management_guide.json"
    ],
    "medium_priority": [
      "feature_template.json",
      "development_workflow.json",
      "python_testing_style_guide.json"
    ],
    "low_priority": [
      "ai_tool_optimization_guide.json",
      "shell_style_guide.json"
    ]
  },
  "decision_frameworks": {
    "architecture_decisions": "core_principles.json",
    "coding_standards": "python_style_guide.json",
    "testing_approaches": "python_testing_style_guide.json",
    "api_design": "fastapi_development_guide.json",
    "style_guide_compliance": "python_style_guide.json"
  },
  "style_guide_compliance": {
    "mandatory": true,
    "primary_source": "humans/guides/python_style_guide.md",
    "ai_reference": "ai/guide_docs/language_specific/python_style_guide.json",
    "auto_validation": true,
    "quality_checklist": true,
    "violation_detection": true,
    "priority_levels": {
      "critical": [
        "module_documentation",
        "legal_notice",
        "import_organization",
        "type_hints",
        "pydantic_v2_migration"
      ],
      "high": [
        "error_handling",
        "code_organization",
        "testing_patterns",
        "security_patterns"
      ],
      "medium": [
        "performance_patterns",
        "logging_patterns",
        "file_operations"
      ]
    }
  },
  "documentation": {
    "template_version": "3.1",
    "format": "json",
    "ai_metadata_required": true,
    "cross_references_required": true,
    "validation_rules_required": true,
    "structured_content": true,
    "dynamic_integration_enabled": true,
    "style_guide_compliance_required": true
  },
  "patterns": {
    "error_handling": "consistent across all guides",
    "code_organization": "modular and maintainable",
    "testing": "comprehensive coverage",
    "documentation": "JSON-optimized for AI consumption",
    "dynamic_integration": "automatic pattern synchronization",
    "style_guide_compliance": "mandatory and automatic"
  },
  "templates": {
    "feature_documentation": "feature_template.json",
    "code_review": "code_review_patterns.json",

  "scripts": {
    "health_check": {
      "purpose": "validate documentation quality and completeness",
      "output": "outputs/health_check/healthcheck-result.json",
      "style_guide_check": true
    },
    "update_documentation": {
      "purpose": "maintain consistency and update metadata",
      "output": "outputs/updates/update-results.md",
      "style_guide_sync": true
    },
    "test_paths": {
      "purpose": "verify system structure and path resolution",
      "output": "outputs/test_results/path-test-results.md"
    },
    "convert_to_json": {
      "purpose": "convert markdown documentation to JSON format for AI consumption",
      "output": "outputs/conversion_report.json"
    },
    "dynamic_integration": {
      "purpose": "automatically sync patterns from source guides to core principles",
      "output": "outputs/dynamic_integration/integration-report.json",
      "triggers": [
        "guide_update",
        "manual_request",
        "health_check_failure",
        "style_guide_violation"
      ],
      "style_guide_compliance": true
    }
  },
  "conversion": {
    "source_format": "markdown",
    "target_format": "json",
    "optimization": "ai_tool_consumption",
    "preserve_original": true,
    "structured_output": true,
    "style_guide_compliance": true
  }
}
